<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimary</item>

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteDark</item>
        <item name="drawerArrowStyle">@style/DrawerVBage_ArrowStyle</item>
    </style>

    <style name="DrawerVBage_ArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorWhite</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/colorWhiteDark</item>
    </style>


    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:textColorSecondary">#AEAEAE</item>
        <item name="android:textSize">16sp</item><!-- text size in menu-->


        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>


</resources>